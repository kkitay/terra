{
  "name": "raccoon",
  "productName": "Raccoon",
  "description": "Raccoon",
  "version": "1.1.0",
  "private": true,
  "author": {
    "name": "Kat Kitay",
    "email": "katkitay@gmail.com",
    "url": "https://raccoon.technology"
  },
  "repository": "github:kkitay/raccoon",
  "main": "electron/electron.js",
  "homepage": "./",
  "build": {
    "appId": "com.electron.raccoon",
    "productName": "Raccoon",
    "copyright": "Copyright Until I'm Dead ${author}",
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "mac": {
      "icon": "build/assets/raccoon.png",
      "publish": "github"
    }
  },
  "engines": {
    "node": "^10.11"
  },
  "dependencies": {
    "classnames": "^2.2.6",
    "electron-is-dev": "^1.0.1",
    "electron-notification-state": "^1.0.4",
    "electron-settings": "^3.2.0",
    "electron-updater": "^4.0.6",
    "lodash": "^4.17.11",
    "react": "^16.8.1",
    "react-dom": "^16.8.1",
    "react-router": "^4.3.1",
    "react-router-dom": "^4.3.1",
    "react-scripts": "^2.1.3",
    "react-tooltip": "^3.9.2",
    "react-typist": "^2.0.5"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron": "electromon ./electron/electron",
    "dev": "nf start",
    "prepackitup": "yarn build && copyfiles -u 1 electron/** electron/**/** build",
    "packitup": "electron-builder --publish onTagOrDraft",
    "postpackitup": "electron-builder install-app-deps",
    "release": "yarn packitup"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "copyfiles": "^2.1.0",
    "electromon": "^1.0.10",
    "electron": "^4.0.4",
    "electron-builder": "^20.38.5",
    "foreman": "^3.0.1"
  }
}
